%h1 #{t('headings.contribute_to_the_doc')}
.row
  .small-11.large-centered.columns
    = form_for @art do |f|
      .control-group
        = f.text_field :title, id: "new-art", placeholder:"Title of Art (if known)"
      .control-group
        = f.text_field :artist, id: "new-art", placeholder:"Artist (if known)"
      .control-group
        =f.text_area :comment, id: "new-art", placeholder: "comments"

      =f.fields_for :location do |p|
        .control-group
          =p.text_field :address, id: "new-art", placeholder: "address"

      =f.submit "sumbit"

